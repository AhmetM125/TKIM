@inherits RazorComponentBase
@page "/company"

<div class="d-flex flex-row-reverse">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
            <li class="breadcrumb-item ">Şirket</li>
        </ol>
    </nav>
</div>


<div class="row justify-content-center mt-4">
    <div class="col-11 card ">
        <div class="card-body d-flex flex-sm-wrap flex-wrap">
            <div class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-12 text-center company-button">
                <button class="width-90 btn @(IsButtonActive(PageType.Insert))" @onclick="()=>ChangeCategory(PageType.Insert)">Şirket Ekle</button>
            </div>
            <div class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-12 col-xs-12  text-center">
                <button class="width-90 btn @(IsButtonActive(PageType.List))" @onclick="()=>ChangeCategory(PageType.List)">Şirket Listesi</button>
            </div>
        </div>
    </div>
</div>

@switch (PageType)
{
    case PageType.Main:
        break;
    case PageType.Insert:
        <CreateComponent />
        break;
    case PageType.List:
         <ListComponent /> 
        break;
}
<style>

     @@media screen and (max-width:764px) {
         .company-button {
             margin-bottom: 10px;
         }
     }
</style>
