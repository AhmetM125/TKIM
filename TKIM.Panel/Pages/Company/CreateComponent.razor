@inherits RazorComponentBase
<div class="row justify-content-center mt-4">
    <div class="col-11 card">
        <div class="card-body">
            <div class="d-flex">
                <div class="width-20">
                    <p>
                        Şirket Bilgileri
                    </p>
                    <input @bind="@Model.Name" maxlength="100" placeholder="Şirket İsmi:" type="text" class="form-control" />
                    <input @bind="@Model.PhoneNumber" maxlength="100" placeholder="Cep Telefon Numarası:" type="text" class="form-control mt-2" />
                    <input @bind="@Model.Number" maxlength="100" placeholder="Telefon Numarası:" type="text" class="form-control mt-2" />
                    <input @bind="@Model.Email" maxlength="100" placeholder="Email:" type="text" class="form-control mt-2" />
                </div>
                <div class="width-20 ml-4">
                    <p>Şirket Adres</p>
                    <textarea @bind="@Model.Address" class="form-control" rows="7" placeholder="Şirket Adres">

                    </textarea>
                </div>
                <div class="width-20 ml-4">
                    <p>
                        Şirket Açıklama
                    </p>
                    <textarea @bind="@Model.Description" rows="7" maxlength="200" class="form-control" placeholder="Şirket Açıklama">

                    </textarea>
                </div>
                
            </div>
            <div class="d-flex flex-row-reverse">
                <div class="width-25">
                    <button class="btn btn-primary width-100" @onclick="@Submit">
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


