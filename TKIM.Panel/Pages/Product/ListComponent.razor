@inherits RazorComponentBase



<TKIM.Panel.Layout.Component.Loader IsLoading="@ShowLoader" />

<div class="row justify-content-center mt-4">
    <div class="col-11 card">
        <div class="card-body">
            <div class="d-flex flex-row-reverse">
                <div class="width-25">
                    <input type="text" placeholder="Ara..." class="form-control" />
                </div>
                <div class="width-5 text-center pe-2">
                    <button class="btn btn-outline-primary width-100 ">
                        <i class="fas fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
            <div class="d-flex mt-4">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ürün İsmi</th>
                            <th>Kategori</th>
                            <th>Stok</th>
                            <th></th>
                            <th class="width-10"></th>
                        </tr>

                    </thead>
                    <tbody>
                        @if (ProductList is not null && ProductList.Any())
                        {
                            @foreach (var item in ProductList)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Stock</td>
                                    <td>@item.Price</td>
                                    <td class="d-flex justify-content-evenly">

                                        <button class="btn btn-outline-secondary" @onclick="()=>Modify(item.Id)">
                                            <i class="fa-solid fa-gear"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<Modal Id="ProductModify" Size="ModalSize.xl" Title="Ürün Detayları">
    <Body>
        <ModifyComponent OnUpdateProduct="LoadGrid" ProductId="SelectedProductId" ></ModifyComponent>

    </Body>
</Modal>