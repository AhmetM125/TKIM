@inherits RazorComponentBase


<div class="row justify-content-center mt-4  @CartStatus">
    <div class="col-11 card">
        <div class="d-flex justify-content-between mt-3">
            <h5 class=" ml-1"> @BasketNo. Sepet </h5>

            <div>
                <button class="btn btn-outline-secondary btn-sm" @onclick="MinimizeCart">
                    <i class="fa-solid fa-window-minimize"></i>
                </button>
                <button class="btn btn-outline-danger btn-sm" @onclick="RemoveCart">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </div>
        </div>

        <div class="card-body d-flex flex-sm-wrap flex-wrap">

            <div class="point-of-sale col-12">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Adet</th>
                            <th class="width-15">Alışveriş Sonrası Stok</th>
                            <th>Satış Fiyatı</th>
                            <th class="width-30"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in BasketTabVM.BasketItems)
                        {

                            <tr>
                                <td>@item.Name</td>
                                <td>@item.QuantityInCart</td>
                                @{
                                    var remain = item.Stock - item.QuantityInCart;
                                    var quantityCss = QuantityAlert(remain);
                                    string quantityTextColor = "text-black";
                                    if (!string.IsNullOrEmpty(quantityCss))
                                        quantityTextColor = "text-white";
                                }
                                <td class="@quantityCss">
                                    @if (!string.IsNullOrEmpty(quantityCss))
                                    {
                                        <div class="d-flex flex-row-reverse mb-20">
                                            <i class="fa-solid fa-triangle-exclamation" style="color: #ffffff;"></i>
                                        </div>
                                    }

                                    <input type="number" value="@remain" class="form-control @quantityCss @quantityTextColor">
                                </td>
                                <td>@item.SalePrice</td>
                                <td>
                                    <div class="d-flex">
                                        <button class="btn btn-outline-danger ">
                                            <i class="fa-solid fa-basket-shopping"></i>
                                            Sepetten Kaldır
                                        </button>
                                        <button class="btn btn-outline-success ml-2 width-40">
                                            <i class="fa-solid fa-circle-info"></i>
                                            Detay
                                        </button>

                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

